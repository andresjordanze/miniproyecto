<% title "Iniciar Sesión" %>

<p>No tienes una cuenta? <%= link_to "Registrate!", signup_path %></p>

<%= form_tag sessions_path do %>
	<div class="col-xs-3">
  		<p><%= text_field_tag :login, params[:login], :class => 'form-control', :placeholder => 'Email...' %></p>
  		<p><%= password_field_tag :password, params[:password], :class => 'form-control', :placeholder => 'Contraseña...' %></p>
  		<p><%= submit_tag "Iniciar sesión", :class => "btn btn-lg btn-primary btn-block" %></p>
  	</div>
<% end %>