<% title "Iniciar Sesion" %>

<p>No tienes una cuenta? <%= link_to "Registrate!", signup_path %></p>

<%= form_tag sessions_path do %>
  <p>
    <%= label_tag :login, "Nombre de usuario o email" %>
    <%= text_field_tag :login, params[:login] %>
  </p>
  <p>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </p>
  <p><%= submit_tag "Iniciar sesion" %></p>
<% end %>
