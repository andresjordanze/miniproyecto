<h1>Nuevo anuncio</h1>
<%= form_for :ad, url: ads_path do |f| %>
  <div class="col-xs-5">
  <p>
    <%= f.label :title, 'Titulo' %><br>
    <%= f.text_field :title, :class => 'form-control'%>
  </p>
 
  <p>
    <%= f.label :text, 'Detalle' %><br>
    <%= f.text_area :text, :class => 'form-control' %>
  </p>
  
  <p>
    <%= f.submit 'Publicar', :class => 'btn btn-lg btn-success' %>
  </p>
</div>
<% end %>